
<section class="auth-section">
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="flex flex-col items-center justify-center px-6 py-8 mx-auto md:h-screen lg:py-0">
    <div class="w-full bg-white rounded-lg shadow md:mt-0 sm:max-w-md xl:p-0 ">
      <div class="w-full">
        <img class="w-30 h-20 mx-auto pt-4" src="<%=asset_path('airbnb-logo.png')%>" alt="logo">
      </div>
      <div class="pt-4 px-6 pb-6 space-y-4 md:space-y-6 sm:px-8 sm:pb-8">
        <h1 class="text-center text-xl font-bold leading-tight tracking-tight text-gray-900 md:text-2xl">
          Create an account
        </h1>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: "space-y-4 md:space-y-6") do |f| %>
          <div class="field">
            <%= f.label :email, class: "block mb-2 text-sm font-medium text-gray-900" %>
            <%= f.email_field :email, class: "bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 ", autofocus: true, autocomplete: "email" %>
          </div>
          <div class="field pt-5">
            <%= f.label :password, class: "block mb-2 text-sm font-medium text-gray-900" %>
            <%= f.password_field :password, class: "bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 ", autocomplete: "new-password" %>
          </div>
          <div class="actions pt-6">
            <%= f.submit "Sign up", class: "w-full text-white bg-[#FF5A5F] hover:bg-[#FF5A5F]-700 focus:ring-4 focus:outline-none focus:ring-primary-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center" %>
          </div>
          <div class="relative flex py-5 items-center">
            <div class="flex-grow border-t border-gray-300"></div>
            <span class="text-sm flex-shrink mx-4 text-gray-600">or</span>
            <div class="flex-grow border-t border-1"></div>
          </div>
          <%= link_to 'Log in', new_user_session_path, class: "block w-full text-white bg-gray-400 hover:bg-gray-700 focus:ring-4 focus:outline-none focus:ring-primary-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center"%> 
        <% end %>
        </div>
      </div>
  </div>
</section>